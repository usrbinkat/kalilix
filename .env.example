# Kalilix Development Environment Configuration
# Copy to .env and customize for your environment

# Project Settings
PROJECT_NAME=kalilix
PROJECT_ORG=usrbinkat
PROJECT_ENV=development

# Nix Configuration
NIX_VERSION=2.24.10
NIX_CHANNELS="nixpkgs-unstable nixos-24.05"

# Binary Cache (optional)
# CACHIX_NAME=kalilix
# CACHIX_AUTH_TOKEN=your-token-here

# Container Settings
COMPOSE_PROJECT_NAME=kalilix
CONTAINER_NAME=kalilix-workspace

# Development Settings
DEFAULT_SHELL=base
EDITOR=vim

# Feature Flags
KALILIX_AUTO_UPDATE=false
KALILIX_TELEMETRY=false